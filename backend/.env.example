# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/chat_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_management
DB_USER=username
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-here-change-in-production
COOKIE_SAME_SITE=lax

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-production
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Meta Business API Configuration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
META_API_VERSION=v18.0
META_GRAPH_API_URL=https://graph.facebook.com

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Development Configuration
DEBUG=false
ENABLE_CORS=true
TRUST_PROXY=true

# Production Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NOSNIFF_ENABLED=true

# Background Jobs (if using a job queue)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=chat_mgmt:

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Tenant Configuration
DEFAULT_TENANT_PLAN=basic
MAX_CHATS_PER_TENANT=1000
MAX_USERS_PER_TENANT=50

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_VOICE_MESSAGES=true

# Third-party Integrations
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30